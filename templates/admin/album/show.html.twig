{% extends '/admin/dashboard.html.twig' %}

{% block title %}Album{% endblock %}

{% block main_content %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ album.password }}</td>
            </tr>
        </tbody>
    </table>
    {% set albumFolder = album.getUniqId()|upper %}
	<div class="grid grid-cols-3 md:grid-cols-5 gap-4">
    {% for photo in photos %}
        {% if photo.title !=  "" %}
            <img class="h-full max-w-full rounded-lg object-cover" src='{{path("app_file", {"title": photo.title} )}}'/>
        {% endif %}

    {% endfor %}
    </div>

	<div class="actionButtons flex flex-row my-6">
        <a href="{{ path('app_admin_album_index') }}" class="back-button">Revenir en arri√®re</a>
        <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}" class="edit-button">Modifier</a>
        {{ include('admin/album/_delete_form.html.twig') }}
    </div>
{% endblock %}
