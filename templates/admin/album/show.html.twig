{% extends '/admin/dashboard.html.twig' %}

{% block title %}Album{% endblock %}

{% block main_content %}
    <h1>Album</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ album.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ album.name }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ album.password }}</td>
            </tr>
        </tbody>
    </table>
    {% set albumFolder = album.getUniqId()|upper %}
    {% for photo in photos %}
        {% if photo.title !=  "" %}
            <img src='{{path("app_file", {"title": photo.title} )}}'/>
        {% endif %}

    {% endfor %}


    <a href="{{ path('app_admin_album_index') }}">back to list</a>

    <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}">edit</a>

    {{ include('admin/album/_delete_form.html.twig') }}
{% endblock %}
