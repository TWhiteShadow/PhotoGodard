{% extends '/admin/dashboard.html.twig' %}

{% block title %}Liste des Albums{% endblock %}

{% block main_content %}
    <h1>Liste des Albums</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Mot de passe</th>
                <th>Photos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td data-title="Id">{{ album.id }}</td>
                <td data-title="Nom">{{ album.name }}</td>
                <td data-title="Mot de passe">{{ album.password }}</td>
                <td data-title="Photos">{{album.photos|length}}</td>
                <td data-title="Actions" class="flex flex-wrap items-center py-2">
                    <a href="{{ path('app_admin_album_show', {'id': album.id}) }}" class="mb-0 show-button">Voir</a>
                    <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}" class="mb-0 edit-button">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune donnée trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_album_new') }}"  class="create-button">Ajouter</a>
{% endblock %}
