{% extends '/admin/dashboard.html.twig' %}

{% block title %}Album index{% endblock %}

{% block main_content %}
    <h1>Album index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Password</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for album in albums %}
            <tr>
                <td>{{ album.id }}</td>
                <td>{{ album.name }}</td>
                <td>{{ album.password }}</td>
                <td>
                    <a href="{{ path('app_admin_album_show', {'id': album.id}) }}">show</a>
                    <a href="{{ path('app_admin_album_edit', {'id': album.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_album_new') }}">Create new</a>
{% endblock %}
