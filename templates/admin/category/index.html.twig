{% extends '/admin/dashboard.html.twig' %}

{% block title %}Liste des Catégories{% endblock %}

{% block main_content %}
    <h1>Liste des Catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Photos</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td data-title="Id">{{ category.id }}</td>
                <td data-title="Nom">{{ category.name }}</td>
                <td data-title="Photos">{{ category.photos|length }}</td>
                <td data-title="Actions" class="flex flex-wrap items-center py-2">
                    <a href="{{ path('app_admin_category_show', {'id': category.id}) }}" class="mb-0 show-button ">Voir</a>
                    <a href="{{ path('app_admin_category_edit', {'id': category.id}) }}" class="mb-0 edit-button ">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune donnée trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_category_new') }}" class="create-button">Ajouter</a>
{% endblock %}
