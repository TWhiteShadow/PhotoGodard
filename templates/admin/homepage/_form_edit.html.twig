<details>
    <summary>Section Accueil</summary>
    <div class="content">
        <div class="flex gap-10 justify-center mb-6 flex-wrap">
            <div class="flex flex-col gap-14">
                <div>
                    {{ form_label(form.photoTopLeft, null, {'label_attr': {'class': 'photoTopLeftLabel'} }) }}
                    {% if form.vars.value.photoTopLeft is not null %}
                    <label for="{{ form.photoTopLeft.vars.id }}" class="group cursor-pointer w-fit h-fit flex relative">
                        <img src="{{ asset(form.vars.value.photoTopLeft) }}" alt="Preview"
                            class="relative max-w-[200px] max-h-[200px] photoTopLeft group-hover:opacity-80  transition-all">
                        <i
                            class="fa-regular fa-pen-to-square text-gray-800 scale-150 absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 group-hover:opacity-100 opacity-0 transition-all"></i>
                    </label>
                    {% endif %}
                    {{ form_widget(form.photoTopLeft, {required: false, value: form.vars.value.photoTopLeft, 'attr':
                    {'class': 'inputPhoto hidden', "data-img" : "photoTopLeft"} }) }}
                </div>


