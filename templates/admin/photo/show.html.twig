{% extends '/admin/dashboard.html.twig' %}

{% block title %}Photo{% endblock %}

{% block main_content %}
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ photo.title }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td>{{ photo.filename }}</td>
            </tr>
            <tr>
                <th>Filesize</th>
                <td>{{ photo.filesize }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ photo.createdAt ? photo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ photo.updatedAt ? photo.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_photo_index') }}" class="back-button">Revenir en arri√®re</a>

    <a href="{{ path('app_admin_photo_edit', {'id': photo.id}) }}" class="edit-button">Modifier</a>

    {% include('admin/_delete_form.html.twig') with {
            'entity_delete_path' : 'app_admin_photo_delete',
            'entity' : photo,
        } %}
{% endblock %}
