<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>

        <link href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.css" rel="stylesheet" />

        <link rel="icon" href="{{ asset('assets/images/godard.ico') }}">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.2.1/flowbite.min.js"></script>
        <script src="https://kit.fontawesome.com/460200155f.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/1.8.3/jquery.js"></script>
        {% block body %}
        {% endblock %}

        {# SPINNER #}
        <div class="spinner">
            <svg viewBox="25 25 50 50">
                <circle r="20" cy="50" cx="50"></circle>
            </svg>
        </div>

        <script>

        $(window).load(function(){
            // close spinner0
            document.querySelector('.spinner').classList.toggle('hide');
            setTimeout(() => {
                document.querySelector('.spinner').remove();
            }, 1500);
        });
        </script>
    </body>
</html>
